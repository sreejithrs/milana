<section class="" style="background-color: #e6e6e6; height: 1000px;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-10">
        <div class="card" style="border-radius: 1rem; height: 600px;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="/images/login.jpeg"
                alt="login form"
                class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 600px;"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/login" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Login</span>
                  </div>

           

                  <div class="form-outline mb-4 mt-5">
                    <input type="email" id="form2Example17" name="email" class="form-control form-control-md" />
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="form2Example27" name="password" class="form-control form-control-md" />
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>

                  <div style="color: tomato;">
                      {{#if error}}
                      {{error}}
                      {{/if}}
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-md btn-block" type="submit">Login</button>
                  </div>

                  <p class="text-center">OR</p>

                  <div class="pt-1 mb-4">
                    <a href="/login/verify" class="btn btn-success btn-md btn-block" type="submit" style="color: white;">Login with Phone Number</a>
                  </div>

                  
                  <div class="mt-4">
                       <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/signup" style="color: #0217ff;">Register here</a></p>
                  </div>
                 
                  
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>